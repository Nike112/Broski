  "AccuracyMetrics": [
    {
      "name": "Mean Absolute Percentage Error (MAPE)",
      "description": "Shows the typical miss as a percentage, making it easy to compare across different scales.",
      "variables": ["Actual", "Forecast", "n"],
      "calculation": "(100 / n) * SUM(|Actual - Forecast| / Actual)",
      "citations": [7],
      "keywords": ["mape", "mean absolute percentage error", "accuracy", "prediction accuracy"]
    },
    {
      "name": "Mean Absolute Error (MAE)",
      "description": "Shows the typical miss in dollar value, which is easy to interpret.",
      "variables": ["Actual", "Forecast", "n"],
      "calculation": "(1 / n) * SUM(|Actual - Forecast|)",
      "citations": [8],
      "keywords": ["mae", "mean absolute error", "average error", "prediction error"]
    },
    {
      "name": "Root Mean Squared Error (RMSE)",
      "description": "Penalizes larger misses more harshly, making it sensitive to outliers.",
      "variables": ["Actual", "Forecast", "n"],
      "calculation": "SQRT(SUM((Actual - Forecast)^2) / n)",
      "citations": [9],
      "keywords": ["rmse", "root mean squared error", "squared error", "prediction variance"]
    },
    {
      "name": "Bias",
      "description": "Averages the difference between predicted and actual revenue to reveal a consistent over- or underestimation.",
      "variables": ["Actual", "Forecast", "n"],
      "calculation": "(1 / n) * SUM(Forecast - Actual)",
      "citations": [10],
      "keywords": ["bias", "prediction bias", "systematic error", "overestimation", "underestimation"]
    }
  ],
