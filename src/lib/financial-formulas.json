  "profitability_metrics": {
    "burn_rate": {
      "formula": "monthly_revenue - monthly_operating_expenses",
      "description": "Monthly cash burn rate (negative means burning cash)",
      "keywords": ["burn rate", "cash burn", "monthly burn", "cash flow"]
    },
    "cash_runway": {
      "formula": "cash_in_bank / abs(burn_rate)",
      "description": "Months of cash remaining at current burn rate",
      "keywords": ["cash runway", "runway", "months of cash", "cash remaining"]
    },
    "break_even_point": {
      "formula": "operating_expenses / gross_margin_per_customer",
      "description": "Number of customers needed to break even",
      "keywords": ["break even", "break-even", "break even point", "breakeven"]
    },
    "gross_margin_per_customer": {
      "formula": "(revenue_per_customer * gross_margin_rate) - variable_costs_per_customer",
      "description": "Gross profit per customer after variable costs",
      "keywords": ["gross margin per customer", "profit per customer", "customer margin"]
    },
    "monthly_profit": {
      "formula": "gross_profit - operating_expenses",
      "description": "Monthly net profit after all expenses",
      "keywords": ["monthly profit", "net profit", "monthly income", "profit"]
    },
    "gross_margin_percentage": {
      "formula": "(gross_profit / revenue) * 100",
      "description": "Gross margin as a percentage of revenue",
      "keywords": ["gross margin", "margin percentage", "gross margin %"]
    },
    "net_margin_percentage": {
      "formula": "(net_profit / revenue) * 100",
      "description": "Net margin as a percentage of revenue",
      "keywords": ["net margin", "net margin percentage", "net margin %", "profit margin"]
    }
  },
  "cash_flow_formulas": {
    "burn_rate_forecast": {
      "formula": "projected_revenue * gross_margin_rate - projected_operating_expenses",
      "description": "Projected monthly burn rate based on revenue and expense forecasts",
      "keywords": ["burn rate forecast", "projected burn", "future burn rate"]
    },
    "cash_runway_forecast": {
      "formula": "remaining_cash / projected_burn_rate",
      "description": "Projected months of cash remaining based on forecast",
      "keywords": ["runway forecast", "projected runway", "future runway"]
    },
    "break_even_forecast": {
      "formula": "projected_operating_expenses / (projected_revenue_per_customer * gross_margin_rate)",
      "description": "Projected number of customers needed to break even",
      "keywords": ["break even forecast", "projected break even", "future break even"]
    },
    "cumulative_cash_flow": {
      "formula": "initial_cash + sum(monthly_cash_flow)",
      "description": "Running total of cash position over time",
      "keywords": ["cumulative cash", "cash position", "total cash flow"]
    }
  }
